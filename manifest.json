{
  "name": "Summarizer",
  "version": "1.0",
  "manifest_version" : 2,
  "description": "Summarizes web articles",
  "background" : {
    "scripts" : ["background.js"]
  },

  "icons": { 
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png" 
  },
  
  "browser_action": {
    "default_icon": "icon48.png"
  },

  "permissions": ["activeTab", "tabs"]
}